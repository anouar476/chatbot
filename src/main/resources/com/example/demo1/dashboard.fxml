<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="1300.0" style="-fx-background-color: #ffffff;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo1.DashboardController">
    <!-- Menu Bar -->
    <MenuBar prefHeight="40.0" prefWidth="1300.0" style="-fx-background-color: #0056b3;">
        <Menu style="-fx-text-fill: white;" text="File">
            <MenuItem text="New" />
            <MenuItem onAction="#handleExit" text="Exit" />
        </Menu>
        <Menu style="-fx-text-fill: white;" text="Settings">
            <MenuItem text="Preferences" />
        </Menu>
    </MenuBar>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="50.0" spacing="20.0" style="-fx-background-color: #0056b3; -fx-padding: 10;">
        <Text fill="white" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Chatbot Dashboard" />
    </HBox>

    <!-- Chat Area -->
    <StackPane layoutX="20.0" layoutY="100.0" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #f9f9f9; -fx-border-color: #0056b3; -fx-border-width: 2; -fx-border-radius: 10;">
        <TextArea fx:id="chatArea" editable="false" prefHeight="480.0" prefWidth="780.0"
                  style="-fx-background-color: #f9f9f9; -fx-text-fill: black; -fx-font-size: 14px; -fx-font-family: Arial; -fx-border-radius: 10px;" wrapText="true"/>
    </StackPane>

    <!-- Input Area -->
    <HBox layoutX="20.0" layoutY="620.0" spacing="10.0">
        <TextArea fx:id="inputField" prefHeight="50.0" prefWidth="600.0"
                  promptText="Type your message..."
                  style="-fx-background-color: #e9ecef; -fx-text-fill: black; -fx-font-size: 14px; -fx-border-radius: 5px;" />
        <Button fx:id="sendButton" onAction="#handleSendMessage"
                style="-fx-background-color: #0056b3; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;"
                text="rr"/>
    </HBox>

    <!-- History Section -->
    <StackPane layoutX="840.0" layoutY="100.0" prefHeight="500.0" prefWidth="440.0" style="-fx-background-color: #f9f9f9; -fx-border-color: #0056b3; -fx-border-width: 2; -fx-border-radius: 10;">
        <Text fontSmoothingType="LCD"
              layoutX="10.0" layoutY="30.0"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              style="-fx-font-size: 18px; -fx-font-weight: bold; color: #0056b3;"
              text="Chat History"/>
        <!-- Future chat history can be displayed here -->
    </StackPane>
</AnchorPane>
